@model IEnumerable<VidlyApp.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@Html.ActionLink("New Movie", "New", null, new { @class = "btn btn-primary" })
<br />
<br />
@if (Model.Count() <= 0)
{
    <text>you don't have movies available</text>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@Html.ActionLink(movie.Name, "Edit", new { id = movie.Id })</td>
                    <td>@movie.Genre.Name</td>
                </tr>
            }
        </tbody>
    </table>
}
